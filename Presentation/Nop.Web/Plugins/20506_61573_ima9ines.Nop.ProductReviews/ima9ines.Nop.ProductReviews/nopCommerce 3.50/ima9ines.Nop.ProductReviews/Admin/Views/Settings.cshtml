@using ima9ines.Nop.Admin.Models
@using ima9ines.Nop.Core.Plugins
@using ima9ines.Nop.ProductReviews.Admin.Models
@using Nop.Web.Framework
@model ConfigurationModel
@{ Layout = "_PluginAdminLayout".GetAdminViewFor(); }
@section leftpane{ @Html.Partial("_AboutThisPlugin.Logo".GetAdminViewFor(), Model.AboutThisPlugin) }
@section rightpane{ @Html.Partial("_AboutThisPlugin.Info.ListGroup".GetAdminViewFor(), Model.AboutThisPlugin) }
<div class="panel panel-default ima9ines-nop-plugin__settings">
    <div class="panel-heading">
        <h3 class="panel-title">@T("ima9ines.Nop.PluginSettings")</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            @Html.Partial("_PluginSettings".GetAdminViewFor(), Model as IPluginModel)
            @Html.Partial("_PluginActions".GetAdminViewFor())
        </div>
    </div>
</div>